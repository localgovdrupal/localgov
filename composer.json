{
    "name": "localgovdrupal/localgov",
    "description": "LocalGovDrupal distribution",
    "type": "drupal-profile",
    "license": "GPL-2.0-or-later",
    "homepage": "https://github.com/localgovdrupal/localgov",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "drupal/admin_toolbar": "^3.0",
        "drupal/core": "^8.9",
        "drupal/devel": "^2.1",
        "drupal/gin": "3.0.0-alpha34",
        "drupal/gin_login": "^1.0@RC",
        "drupal/gin_toolbar": "^1.0@beta",
        "drupal/simple_sitemap": "^3.7",
        "drush/drush": ">=10",
        "localgovdrupal/localgov_alert_banner": "~1.1.0",
        "localgovdrupal/localgov_core": "~1.0.0",
        "localgovdrupal/localgov_demo": "~1.0.0",
        "localgovdrupal/localgov_directories": "~1.0.0",
        "localgovdrupal/localgov_events": "~1.0.0",
        "localgovdrupal/localgov_guides": "~1.0.0",
        "localgovdrupal/localgov_menu_link_group": "~1.0.0",
        "localgovdrupal/localgov_paragraphs": "~1.0.0",
        "localgovdrupal/localgov_services": "~1.0.0",
        "localgovdrupal/localgov_step_by_step": "~1.0.0",
        "localgovdrupal/localgov_subsites": "~1.0.0",
        "localgovdrupal/localgov_theme": "~1.0.0"
    },
    "require-dev": {
        "drupal/core-dev": "^8.9"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drupal/core": {
                "Fix to system.module to avoid breaking tests in PHP 7.4 - see https://www.drupal.org/project/drupal/issues/3191012": "https://www.drupal.org/files/issues/2021-01-05/fix-php74-tests-3191012-2.patch",
                "Fix for Nested Paragraphs create multiple drag handles https://www.drupal.org/project/drupal/issues/3092181": "https://www.drupal.org/files/issues/2020-05-28/3092181-87-89x.patch",
                "Fix tests running with paratest. See https://www.drupal.org/project/drupal/issues/3192365": "https://www.drupal.org/files/issues/2021-01-12/3192365-3.patch"
            },
            "drupal/gin_login": {
                "Fix schema for gin_login, see https://www.drupal.org/project/gin_login/issues/3192526": "https://www.drupal.org/files/issues/2021-01-13/gin_login-config_schema-3192526-8.patch"
            }
        }
    }
}
