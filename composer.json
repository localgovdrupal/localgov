{
    "name": "localgovdrupal/localgov",
    "description": "LocalGovDrupal distribution",
    "type": "drupal-profile",
    "license": "GPL-2.0-or-later",
    "homepage": "https://github.com/localgovdrupal/localgov",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "drupal/admin_toolbar": "^3.0",
        "drupal/core": "^10.0",
        "drupal/gin": "^3.0@alpha",
        "drupal/gin_login": "^1.0@RC",
        "drupal/gin_toolbar": "^1.0@beta",
        "drupal/simple_sitemap": "^4.1",
        "drupal/search_api": "^1.21",
        "drush/drush": ">=10",
        "localgovdrupal/localgov_alert_banner": "^1.2.0",
        "localgovdrupal/localgov_base": "dev-feature/drupal-10 as 1.3.0",
        "localgovdrupal/localgov_core": "dev-feature/drupal-10 as 2.2.0",
        "localgovdrupal/localgov_demo": "dev-feature/drupal-10 as 2.2.0",
        "localgovdrupal/localgov_directories": "dev-feature/drupal-10 as 2.4.0",
        "localgovdrupal/localgov_events": "dev-feature/drupal-10 as 2.1.0",
        "localgovdrupal/localgov_guides": "dev-feature/drupal-10 as 2.1.0",
        "localgovdrupal/localgov_menu_link_group": "dev-feature/drupal-10 as 1.1.0",
        "localgovdrupal/localgov_news": "dev-feature/drupal-10 as 2.3.0",
        "localgovdrupal/localgov_openreferral": "dev-feature/drupal-10 as 1.1.0",
        "localgovdrupal/localgov_paragraphs": "dev-feature/drupal-10 as 2.3.0",
        "localgovdrupal/localgov_search": "dev-feature/drupal-10 as 1.2.0",
        "localgovdrupal/localgov_services": "dev-feature/drupal-10 as 2.1.0",
        "localgovdrupal/localgov_step_by_step": "dev-feature/drupal-10 as 2.1.0",
        "localgovdrupal/localgov_subsites": "dev-feature/drupal-10 as 2.3.0",
        "localgovdrupal/localgov_scarfolk": "dev-feature/drupal-10 as 1.2.0",
        "localgovdrupal/localgov_theme": "dev-feature/drupal-10 as 1.1.0",
        "localgovdrupal/localgov_workflows": "dev-feature/drupal-10 as 1.2.0"
    },
    "require-dev": {
        "drupal/core-dev": "^10.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drupal/core": {
                "Fix for narrow forms on node/add screens, which is included in 9.2. See https://www.drupal.org/project/drupal/issues/3184667": "https://www.drupal.org/files/issues/2021-04-16/3184667.26.patch",
                "Fix tests running with paratest. See https://www.drupal.org/project/drupal/issues/3192365": "https://www.drupal.org/files/issues/2021-01-12/3192365-3.patch",
                "Users can't reference unpublished content even when they have access to it. See https://www.drupal.org/project/drupal/issues/2845144": "https://www.drupal.org/files/issues/2021-06-09/2845144_52.patch"
            },
            "drupal/gin_login": {
                "Fix schema for gin_toolbar, see https://www.drupal.org/project/gin_login/issues/3192526": "https://www.drupal.org/files/issues/2021-01-13/gin_login-config_schema-3192526-8.patch"
            },
            "drupal/search_api": {
                "Fix schema for search_api views, see https://www.drupal.org/project/search_api/issues/3196990": "https://www.drupal.org/files/issues/2021-11-13/3196990-15-wrong_query_type.patch"
            }
        }
    }
}
